{
  "mcp": {
    "server_name": "mail-query-without-db-server",
    "command": "python",
    "args": ["-m", "modules.mail_query_without_db.mcp_server.http_server"],
    "env": {
      "PYTHONPATH": "${PROJECT_ROOT}"
    }
  },
  "paths": {
    "_comment": "Environment variable MCP_DATA_DIR can override base_dir. Falls back to PROJECT_ROOT/data for local dev.",
    "base_dir": "${MCP_DATA_DIR:-${PROJECT_ROOT}/data}",
    "attachments_dir": "${MCP_DATA_DIR:-${PROJECT_ROOT}/data}/attachments",
    "emails_dir": "${MCP_DATA_DIR:-${PROJECT_ROOT}/data}/emails",
    "exports_dir": "${MCP_DATA_DIR:-${PROJECT_ROOT}/data}/exports",
    "temp_dir": "${MCP_DATA_DIR:-${PROJECT_ROOT}/data}/temp",
    "log_file": "${MCP_DATA_DIR:-${PROJECT_ROOT}/data}/logs/mcp_mail_server.log",
    "use_absolute_paths": true,
    "create_if_not_exists": true
  },
  "server": {
    "default_host": "0.0.0.0",
    "default_port": 8002
  },
  "email": {
    "blocked_senders": ["block@krs.co.kr"],
    "default_days_back": 30,
    "default_max_mails": 300,
    "csv_encoding": "utf-8-sig"
  },
  "file_handling": {
    "supported_text_extensions": [".txt", ".log", ".md", ".csv"],
    "supported_pdf_extensions": [".pdf"],
    "supported_word_extensions": [".doc", ".docx"],
    "supported_hwp_extensions": [".hwp"],
    "supported_excel_extensions": [".xls", ".xlsx"],
    "supported_image_extensions": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".tiff"],
    "max_preview_length": 3000,
    "max_filename_length": 200,
    "max_file_size_mb": 50,
    "cleanup_after_query": true
  }
}
