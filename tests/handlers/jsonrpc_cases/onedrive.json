{
  "module": "onedrive",
  "description": "OneDrive MCP 핸들러 테스트 케이스",
  "test_cases": [
    {
      "name": "list_files (루트 디렉토리)",
      "enabled": true,
      "tool": "list_files",
      "arguments": {
        "user_id": "kimghw"
      },
      "expect": {
        "contains": [
          "files",
          "액세스 토큰이 없습니다",
          "총",
          "개 파일"
        ]
      }
    },
    {
      "name": "list_files (Documents 폴더)",
      "enabled": true,
      "tool": "list_files",
      "arguments": {
        "user_id": "kimghw",
        "folder_path": "Documents"
      },
      "expect": {
        "contains": [
          "files",
          "액세스 토큰이 없습니다"
        ]
      }
    },
    {
      "name": "list_files (검색)",
      "enabled": true,
      "tool": "list_files",
      "arguments": {
        "user_id": "kimghw",
        "search": "test"
      },
      "expect": {
        "contains": [
          "files",
          "액세스 토큰이 없습니다"
        ]
      }
    },
    {
      "name": "read_file (텍스트 파일)",
      "enabled": true,
      "tool": "read_file",
      "arguments": {
        "user_id": "kimghw",
        "file_path": "test.txt"
      },
      "expect": {
        "contains": [
          "content",
          "액세스 토큰이 없습니다"
        ]
      }
    },
    {
      "name": "write_file (새 파일 생성)",
      "enabled": true,
      "tool": "write_file",
      "arguments": {
        "user_id": "kimghw",
        "file_path": "test_handler.txt",
        "content": "Hello from OneDrive JSONRPC test!",
        "overwrite": true
      },
      "expect": {
        "contains": [
          "success",
          "true"
        ]
      }
    },
    {
      "name": "write_file (기존 파일 덮어쓰기)",
      "enabled": true,
      "tool": "write_file",
      "arguments": {
        "user_id": "kimghw",
        "file_path": "test_handler.txt",
        "content": "Updated content",
        "overwrite": true
      },
      "expect": {
        "contains": [
          "success",
          "true"
        ]
      }
    },
    {
      "name": "create_folder (새 폴더)",
      "enabled": true,
      "tool": "create_folder",
      "arguments": {
        "user_id": "kimghw",
        "folder_path": "TestFolder"
      },
      "expect": {
        "contains": [
          "success",
          "true"
        ]
      }
    },
    {
      "name": "create_folder (중첩 폴더)",
      "enabled": true,
      "tool": "create_folder",
      "arguments": {
        "user_id": "kimghw",
        "folder_path": "SubFolder",
        "parent_path": "TestFolder"
      },
      "expect": {
        "contains": [
          "success",
          "true"
        ]
      }
    },
    {
      "name": "delete_file (파일 삭제)",
      "enabled": true,
      "tool": "delete_file",
      "arguments": {
        "user_id": "kimghw",
        "file_path": "test_handler.txt"
      },
      "expect": {
        "contains": [
          "success",
          "true"
        ]
      }
    }
  ]
}