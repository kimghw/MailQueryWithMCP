{
  "module": "enrollment",
  "description": "Enrollment MCP 핸들러 테스트 케이스",
  "test_cases": [
    {
      "name": "register_account (환경변수 사용)",
      "enabled": true,
      "tool": "register_account",
      "arguments": {
        "use_env_vars": true,
        "user_id": "",
        "email": "",
        "user_name": "",
        "oauth_client_id": "",
        "oauth_client_secret": "",
        "oauth_tenant_id": "",
        "oauth_redirect_uri": ""
      },
      "expect": {
        "contains": [
          "계정 등록 완료",
          "계정 업데이트 완료"
        ]
      }
    },
    {
      "name": "register_account (명시적 정보)",
      "enabled": false,
      "tool": "register_account",
      "arguments": {
        "use_env_vars": false,
        "user_id": "test_user",
        "email": "test@example.com",
        "user_name": "Test User",
        "oauth_client_id": "your-client-id",
        "oauth_client_secret": "your-client-secret",
        "oauth_tenant_id": "your-tenant-id",
        "oauth_redirect_uri": "http://localhost:5000/enrollment/callback"
      },
      "expect": {
        "contains": [
          "계정 등록 완료",
          "계정 업데이트 완료"
        ]
      }
    },
    {
      "name": "list_active_accounts",
      "enabled": true,
      "tool": "list_active_accounts",
      "arguments": {},
      "expect": {
        "contains": [
          "활성 계정 목록"
        ]
      }
    },
    {
      "name": "get_account_status",
      "enabled": true,
      "tool": "get_account_status",
      "arguments": {
        "user_id": "kimghw"
      },
      "expect": {
        "contains": [
          "계정 상태 상세 정보"
        ]
      }
    },
    {
      "name": "start_authentication",
      "enabled": true,
      "tool": "start_authentication",
      "arguments": {
        "user_id": "kimghw",
        "use_auto_select": false
      },
      "expect": {
        "contains": [
          "https://login.microsoftonline.com"
        ]
      }
    }
  ]
}