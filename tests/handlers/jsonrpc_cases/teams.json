{
  "module": "teams",
  "description": "Teams MCP 핸들러 테스트 케이스",
  "test_cases": [
    {
      "name": "teams_list_chats (채팅 목록 조회)",
      "enabled": true,
      "tool": "teams_list_chats",
      "arguments": {
        "user_id": "kimghw"
      },
      "expect": {
        "contains": [
          "chats",
          "액세스 토큰이 없습니다",
          "총",
          "개 채팅"
        ]
      }
    },
    {
      "name": "teams_get_chat_messages (메시지 조회 - 기본)",
      "enabled": true,
      "tool": "teams_get_chat_messages",
      "arguments": {
        "user_id": "kimghw",
        "chat_id": "48:notes",
        "limit": 10
      },
      "expect": {
        "contains": [
          "messages"
        ]
      }
    },
    {
      "name": "teams_get_chat_messages (메시지 조회 - 50개)",
      "enabled": true,
      "tool": "teams_get_chat_messages",
      "arguments": {
        "user_id": "kimghw",
        "chat_id": "48:notes",
        "limit": 50
      },
      "expect": {
        "contains": [
          "messages"
        ]
      }
    },
    {
      "name": "teams_send_chat_message (메시지 전송 - 기본)",
      "enabled": true,
      "tool": "teams_send_chat_message",
      "arguments": {
        "user_id": "kimghw",
        "chat_id": "48:notes",
        "content": "Hello from JSON-RPC test!",
        "prefix": "[claude]"
      },
      "expect": {
        "contains": [
          "success",
          "message_id"
        ]
      }
    },
    {
      "name": "teams_send_chat_message (메시지 전송 - 커스텀 prefix)",
      "enabled": true,
      "tool": "teams_send_chat_message",
      "arguments": {
        "user_id": "kimghw",
        "chat_id": "48:notes",
        "content": "Test message with custom prefix",
        "prefix": "[test]"
      },
      "expect": {
        "contains": [
          "success",
          "message_id"
        ]
      }
    }
  ]
}